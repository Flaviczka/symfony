{% extends 'base.html.twig' %}

{% block title %}Liste des tâches
{% endblock %}

{% block body %}
	<div class="container">
		<a href="{{ path('task_create') }}" class="btn btn-primary">Ajouter</a>
		<table class="table-striped table-bordered" id="tableTasks">
			<thead>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Date effective</th>
				<th>Catégorie</th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				{% if tasks is defined %}
					{% for task in tasks %}
						<tr>
							<th scope="row">{{ task.id }}</th>
							<td>{{ task.name }}</td>
							<td>{{ task.description }}</td>
							<td>{{ task.dueAt | date('d/m/Y H:i') }}</td>
							<td>{{ task.tag.name }}</td>
							<td>
								<a href="{{ path('task_update', {'id': task.id}) }}" class="btn btn-success">Modifier</a>
							</td>
							<td>
								<a href="{{ path('task_delete', {'id': task.id}) }}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				{% endif %}

			</tbody>
		</table>
	</div>
{% endblock %}
