{% extends 'base.html.twig' %}

{% block title %}Tag index
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Tag index</h1>
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="d-flex justify-content-center">
					<p class="fw-bold text-{{ label }}">
						{{ message }}
					</p>
				</div>
			{% endfor %}
		{% endfor %}

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>{{'general.name' | trans}}</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}
					<tr>
						<td>{{ tag.id }}</td>
						<td>{{ tag.name }}</td>
						<td>
							<a class="btn btn-primary" href="{{ path('tag_show', {'id': tag.id}) }}">{{'general.button.show' | trans}}</a>
							<a class="btn btn-success" href="{{ path('tag_edit', {'id': tag.id}) }}">{{'general.button.update' | trans}}</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('tag_new') }}">{{'general.button.add' | trans}}</a>

	</div>
{% endblock %}
